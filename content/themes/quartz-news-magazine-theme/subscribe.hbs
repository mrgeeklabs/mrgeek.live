{{!< default}}

    <section class="subscribe-content clearfix">
        {{^if success}}
            <div class="post-tags">Never miss out!</div>
            <h1>Subscribe to {{@blog.title}}</h1>
            <p>Get the latest stories delivered right to your inbox.</p>

            {{subscribe_form
                form_class="gh-signin clearfix"
                input_class="gh-input"
                button_class="btn btn-blue btn-block"
                placeholder="email address"
                autofocus="true"
            }}
        {{else}}
            <div class="post-tags">Thank You</div>
            <h1>Subscribed!</h1>

            <p>You've successfully subscribed to {{@blog.title}}</strong>.</p>
        {{/if}}
    </section> <!-- .subscribe-content -->
